@page
@model WeatherServerApi.IndexModel

@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = ManageNavPages.Station;
}

<h1>Your Stations</h1>

<p>
    <a asp-page="./StationsCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Api)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Coordinate_X)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station[0].Coordinate_Y)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Station) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Api)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coordinate_X)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coordinate_Y)
            </td>
            <td>
                <a asp-page="./StationsEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./StationsDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./StationsDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
